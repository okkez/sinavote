#rating-block
  %form
    #stars-wrapper
      %select{ :name => "rating" }
        %option{ :value => "1" } 1
        %option{ :value => "2" } 2
        %option{ :value => "3" } 3
        %option{ :value => "4" } 4
        %option{ :value => "5" } 5
    %p#stars-loading{ :style => "padding-left:5px;" }
    %label{ :for => "stars-with-message", :style => "padding-left:5px;" } Message
    %input{ :type => "checkbox", :id => "stars-with-message" }
    %textarea#stars-message{ :name => "message", :rows => "2", :cols => "50" }

- content_for :head do
  apply_stars();